{
  "name": "backend",
  "version": "1.0.0",
  "main": "./dist/src/index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node -r dotenv/config ./dist/src/index.js",
    "start:dev": "npx tsc-watch --onSuccess \"npm run start:prod\" ",
    "build": "rm -rf ./dist/ && ./node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "eslint": "npx eslint src --ext .ts -c ./eslintrc.json",
    "eslint:fix": "npx eslint src --ext .ts --fix -c ./eslintrc.json",
    "db:migrate": "node -r dotenv/config ./dist/scripts/migrations.js --clean"
  },
  "author": "Neil Palima <neiljan.palima@gmail.com>",
  "private": true,
  "dependencies": {
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/moment": "^2.13.0",
    "@types/node": "^14.14.14",
    "@types/sequelize": "^4.28.9",
    "@types/validator": "^13.1.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mysql2": "^2.2.5",
    "node-cache": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.1",
    "sequelize-typescript": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
